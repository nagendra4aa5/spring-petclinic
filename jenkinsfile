pipeline {
    agent { label 'maven2' }
    triggers { pollSCM ('* * * * *') }
    parameters {
        choice(name: 'MAVEN_GOAL', choices: ['package', 'install', 'clean'], description: 'Maven Goal')
    }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/nagendra4aa5/spring-petclinic.git',
                    branch: 'develop'
            }
        }
        stage('package') {
            tools {
                jdk 'jdk_17'
                maven 'maven_3.9.0'
            }
            steps {
                sh 'mvn package'
                sh 'mvn ${params.MAVEN_GOAL}'
            }
        }
        stage('post build') {
            steps {
                archiveArtifacts artifacts:'**/target/*.jar',
                                 onlyIfSuccessful: true
                junit testResults:'**/surefire-reports/TEST-*.xml'
            }  
        }
    }
}